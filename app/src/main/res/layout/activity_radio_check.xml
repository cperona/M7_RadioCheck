<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RadioCheck">

    <RadioGroup android:id="@+id/grbGrup1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
        <CheckBox android:id="@+id/chkMarcam2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/marcam2"
                  android:checked="false"
                  android:onClick="chkMarcam2OnClick"
        />
        <CheckBox android:id="@+id/chkMarcam1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/marcam1"
                  android:checked="false"
                  android:onClick="chkMarcam1OnClick"
        />
        <RadioButton android:id="@+id/rbOpcio1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/opcio_1"
                     android:onClick="rbOpcio1OnClick"
        />
        <RadioButton android:id="@+id/rbOpcio2"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/opcio_2"
                     android:onClick="rbOpcio2OnClick"
        />
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonSubmit"
                android:onClick="submitButtonOnClick"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/resultatTextView" android:textSize="20sp"
                android:textAlignment="center"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>